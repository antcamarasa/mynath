<%= simple_form_for([@appointment, @prescription]) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="container-form-prescription background text-center">
    <div>
      <h5>Votre ordonnance</h5>
    </div>
    <div class="form-inputs">
      <%= f.input :description, label: 'Ajouter une description'  %>
      <%= f.input :document, as: :file, label: 'Télécharger votre document'  %>
    </div>
    <div>
      <div>
      <%= link_to 'Retour', prescriptions_path, class:"button-vert" %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, class: "button-vert", value: "Créer" %>
      </div>
    </div>
  </div>
 <% end %>
