 <footer class="footer-card">
    <div>
      <div class="d-flex justify-content-between">
      <div>
        <%= link_to root_path do %>
          <i class="icon fas fa-home"></i>
        <% end %>
      </div>

      <% if user_signed_in? && current_user.therapist == true %>
          <div>
            <%= link_to patients_path do %>
              <i class="icon fas fa-user-injured"></i>
            <% end %>
          </div>
      <% else %>
          <div>
            <%= link_to prescriptions_path do %>
              <i class="icon fas fa-pills"></i>
            <% end %>
          </div>
      <% end %>
      <div>
        <%= link_to appointments_path do %>
          <i class="icon fas fa-calendar-check"></i>
        <% end %>
      </div>
      <div>
        <%= link_to edit_user_registration_path do %>
          <i class="icon fas fa-user-md"></i>
        <% end %>
      </div>

      </div>
    </div>
</footer>
