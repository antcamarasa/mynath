<div>
<%= simple_form_for (@appointment) do |f| %>
  <%= f.text_field :date_time, placeholder: @appointment.date_time,
      data: {
        controller: "flatpickr",
        flatpickr_date_format: "d-m-Y H:i",
        flatpickr_min_date: Time.now,
        flatpickr_defaultDate: @appointment.date_time,
        flatpickr_enable_time: true,
      } %>

<%= f.button :submit, value: "Modifier votre RDV", class: "button-vert" %>
<% end %>
</div>
