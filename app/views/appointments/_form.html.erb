<div>
<%= simple_form_for ([@therapist, @appointment]), url: therapist_appointments_path, method: :post do |f| %>
  <%= f.text_field :date_time,
      data: {
        controller: "flatpickr",
        flatpickr_date_format: "d-m-Y H:i",
        flatpickr_min_date: Time.now,
        flatpickr_enable_time: true,
      } %>

<%= f.button :submit, value: "Prendre votre RDV", class: "button-vert-rdv" %>
<% end %>
</div>
